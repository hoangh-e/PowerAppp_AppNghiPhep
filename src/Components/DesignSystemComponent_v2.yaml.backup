ComponentDefinitions:
  DesignSystemComponent_v2:
    DefinitionType: CanvasComponent
    CustomProperties:
      # Color System Properties
      ColorTheme:
        PropertyKind: Input
        DisplayName: ColorTheme
        Description: "Chủ đề màu sắc (Light/Dark)"
        DataType: Text
        Default: ="Light"
      
      # Typography Properties
      FontScale:
        PropertyKind: Input
        DisplayName: FontScale
        Description: "Tỷ lệ font size (1.0 = normal)"
        DataType: Number
        Default: =1.0
      
      # Spacing Properties
      SpacingScale:
        PropertyKind: Input
        DisplayName: SpacingScale
        Description: "Tỷ lệ spacing (1.0 = normal)"
        DataType: Number
        Default: =1.0
      
      # Animation Properties
      EnableAnimations:
        PropertyKind: Input
        DisplayName: EnableAnimations
        Description: "Bật/tắt animations"
        DataType: Boolean
        Default: =true
      
      # Responsive Properties
      BreakpointMode:
        PropertyKind: Input
        DisplayName: BreakpointMode
        Description: "Chế độ responsive (Mobile/Tablet/Desktop)"
        DataType: Text
        Default: ="Desktop"
      
      # Color Properties
      PrimaryColor:
        PropertyKind: Input
        DisplayName: PrimaryColor
        Description: "Màu chính"
        DataType: Color
        Default: =RGBA(59, 130, 246, 1)
      
      SecondaryColor:
        PropertyKind: Input
        DisplayName: SecondaryColor
        Description: "Màu phụ"
        DataType: Color
        Default: =RGBA(99, 102, 241, 1)
      
      SuccessColor:
        PropertyKind: Input
        DisplayName: SuccessColor
        Description: "Màu thành công"
        DataType: Color
        Default: =RGBA(34, 197, 94, 1)
      
      WarningColor:
        PropertyKind: Input
        DisplayName: WarningColor
        Description: "Màu cảnh báo"
        DataType: Color
        Default: =RGBA(251, 191, 36, 1)
      
      DangerColor:
        PropertyKind: Input
        DisplayName: DangerColor
        Description: "Màu nguy hiểm"
        DataType: Color
        Default: =RGBA(239, 68, 68, 1)
      
      # Typography Properties
      FontSizeXS:
        PropertyKind: Input
        DisplayName: FontSizeXS
        Description: "Font size extra small"
        DataType: Number
        Default: =12
      
      FontSizeSM:
        PropertyKind: Input
        DisplayName: FontSizeSM
        Description: "Font size small"
        DataType: Number
        Default: =14
      
      FontSizeBase:
        PropertyKind: Input
        DisplayName: FontSizeBase
        Description: "Font size base"
        DataType: Number
        Default: =16
      
      FontSizeLG:
        PropertyKind: Input
        DisplayName: FontSizeLG
        Description: "Font size large"
        DataType: Number
        Default: =18
      
      FontSizeXL:
        PropertyKind: Input
        DisplayName: FontSizeXL
        Description: "Font size extra large"
        DataType: Number
        Default: =20
      
      FontSize2XL:
        PropertyKind: Input
        DisplayName: FontSize2XL
        Description: "Font size 2x large"
        DataType: Number
        Default: =24
      
      FontSize3XL:
        PropertyKind: Input
        DisplayName: FontSize3XL
        Description: "Font size 3x large"
        DataType: Number
        Default: =30
      
      # Spacing Properties
      Space1:
        PropertyKind: Input
        DisplayName: Space1
        Description: "Spacing 4px"
        DataType: Number
        Default: =4
      
      Space2:
        PropertyKind: Input
        DisplayName: Space2
        Description: "Spacing 8px"
        DataType: Number
        Default: =8
      
      Space3:
        PropertyKind: Input
        DisplayName: Space3
        Description: "Spacing 12px"
        DataType: Number
        Default: =12
      
      Space4:
        PropertyKind: Input
        DisplayName: Space4
        Description: "Spacing 16px"
        DataType: Number
        Default: =16
      
      Space6:
        PropertyKind: Input
        DisplayName: Space6
        Description: "Spacing 24px"
        DataType: Number
        Default: =24
      
      Space8:
        PropertyKind: Input
        DisplayName: Space8
        Description: "Spacing 32px"
        DataType: Number
        Default: =32
      
      Space12:
        PropertyKind: Input
        DisplayName: Space12
        Description: "Spacing 48px"
        DataType: Number
        Default: =48
      
      Space16:
        PropertyKind: Input
        DisplayName: Space16
        Description: "Spacing 64px"
        DataType: Number
        Default: =64
      
      # Responsive Properties
      IsMobile:
        PropertyKind: Input
        DisplayName: IsMobile
        Description: "Có phải mobile không"
        DataType: Boolean
        Default: =App.Width < 768
      
      IsTablet:
        PropertyKind: Input
        DisplayName: IsTablet
        Description: "Có phải tablet không"
        DataType: Boolean
        Default: =And(App.Width >= 768, App.Width < 1024)
      
      IsDesktop:
        PropertyKind: Input
        DisplayName: IsDesktop
        Description: "Có phải desktop không"
        DataType: Boolean
        Default: =App.Width >= 1024
      
      IsLarge:
        PropertyKind: Input
        DisplayName: IsLarge
        Description: "Có phải large screen không"
        DataType: Boolean
        Default: =App.Width >= 1280
      
      # Gray Scale Properties
      Gray50:
        PropertyKind: Input
        DisplayName: Gray50
        Description: "Gray 50"
        DataType: Color
        Default: =If(DesignSystemComponent_v2.ColorTheme = "Dark", RGBA(17, 24, 39, 1), RGBA(249, 250, 251, 1))
      
      Gray100:
        PropertyKind: Input
        DisplayName: Gray100
        Description: "Gray 100"
        DataType: Color
        Default: =If(DesignSystemComponent_v2.ColorTheme = "Dark", RGBA(31, 41, 55, 1), RGBA(243, 244, 246, 1))
      
      Gray200:
        PropertyKind: Input
        DisplayName: Gray200
        Description: "Gray 200"
        DataType: Color
        Default: =If(DesignSystemComponent_v2.ColorTheme = "Dark", RGBA(55, 65, 81, 1), RGBA(229, 231, 235, 1))
      
      Gray300:
        PropertyKind: Input
        DisplayName: Gray300
        Description: "Gray 300"
        DataType: Color
        Default: =If(DesignSystemComponent_v2.ColorTheme = "Dark", RGBA(75, 85, 99, 1), RGBA(209, 213, 219, 1))
      
      Gray500:
        PropertyKind: Input
        DisplayName: Gray500
        Description: "Gray 500"
        DataType: Color
        Default: =RGBA(107, 114, 128, 1)
      
      Gray700:
        PropertyKind: Input
        DisplayName: Gray700
        Description: "Gray 700"
        DataType: Color
        Default: =If(DesignSystemComponent_v2.ColorTheme = "Dark", RGBA(209, 213, 219, 1), RGBA(55, 65, 81, 1))
      
      Gray900:
        PropertyKind: Input
        DisplayName: Gray900
        Description: "Gray 900"
        DataType: Color
        Default: =If(DesignSystemComponent_v2.ColorTheme = "Dark", RGBA(249, 250, 251, 1), RGBA(17, 24, 39, 1))
      
      # Shadow Properties
      ShadowSM:
        PropertyKind: Input
        DisplayName: ShadowSM
        Description: "Shadow small"
        DataType: Text
        Default: ="Light"
      
      ShadowMD:
        PropertyKind: Input
        DisplayName: ShadowMD
        Description: "Shadow medium"
        DataType: Text
        Default: ="Regular"
      
      ShadowLG:
        PropertyKind: Input
        DisplayName: ShadowLG
        Description: "Shadow large"
        DataType: Text
        Default: ="Bold"
      
      # Border Radius Properties
      BorderRadiusSM:
        PropertyKind: Input
        DisplayName: BorderRadiusSM
        Description: "Border radius small"
        DataType: Number
        Default: =4
      
      BorderRadiusMD:
        PropertyKind: Input
        DisplayName: BorderRadiusMD
        Description: "Border radius medium"
        DataType: Number
        Default: =8
      
      BorderRadiusLG:
        PropertyKind: Input
        DisplayName: BorderRadiusLG
        Description: "Border radius large"
        DataType: Number
        Default: =12
      
      BorderRadiusXL:
        PropertyKind: Input
        DisplayName: BorderRadiusXL
        Description: "Border radius extra large"
        DataType: Number
        Default: =16
      
      # Touch Target Properties
      TouchTargetMin:
        PropertyKind: Input
        DisplayName: TouchTargetMin
        Description: "Minimum touch target size"
        DataType: Number
        Default: =If(DesignSystemComponent_v2.IsMobile, 44, 32)
      
      TouchTargetComfortable:
        PropertyKind: Input
        DisplayName: TouchTargetComfortable
        Description: "Comfortable touch target size"
        DataType: Number
        Default: =If(DesignSystemComponent_v2.IsMobile, 56, 40)
      
    Properties:
      Height: =App.Height
      Width: =App.Width
      Fill: =RGBA(0, 0, 0, 0)
    Children:
      # Design System Demo/Preview Container
      - 'DesignSystem.Demo.Container':
          Control: GroupContainer
          Variant: ManualLayout
          Properties:
            X: =Parent.X
            Y: =Parent.Y
            Width: =Parent.Width
            Height: =Parent.Height
            Fill: =DesignSystemComponent_v2.Gray50
            Visible: =false
          Children:
            # Color Palette Demo
            - 'DesignSystem.Colors.Title':
                Control: Label
                Properties:
                  X: =Parent.X + DesignSystemComponent_v2.Space4
                  Y: =Parent.Y + DesignSystemComponent_v2.Space4
                  Width: =Parent.Width - (DesignSystemComponent_v2.Space4 * 2)
                  Height: =DesignSystemComponent_v2.FontSize2XL * 1.5
                  Text: ="Color Palette"
                  Color: =DesignSystemComponent_v2.Gray900
                  Font: =Font.'Open Sans'
                  FontWeight: =FontWeight.Bold
                  Size: =DesignSystemComponent_v2.FontSize2XL
                  
            - 'DesignSystem.Colors.Row':
                Control: GroupContainer
                Variant: ManualLayout
                Properties:
                  X: =Parent.X + DesignSystemComponent_v2.Space4
                  Y: ='DesignSystem.Colors.Title'.Y + 'DesignSystem.Colors.Title'.Height + DesignSystemComponent_v2.Space2
                  Width: =Parent.Width - (DesignSystemComponent_v2.Space4 * 2)
                  Height: =80
                Children:
                  - 'DesignSystem.Color.Primary':
                      Control: Rectangle
                      Properties:
                        X: =Parent.X
                        Y: =Parent.Y
                        Width: =(Parent.Width - (DesignSystemComponent_v2.Space2 * 4)) / 5
                        Height: =Parent.Height
                        Fill: =DesignSystemComponent_v2.PrimaryColor
                        
                  - 'DesignSystem.Color.Secondary':
                      Control: Rectangle
                      Properties:
                        X: ='DesignSystem.Color.Primary'.X + 'DesignSystem.Color.Primary'.Width + DesignSystemComponent_v2.Space2
                        Y: =Parent.Y
                        Width: =(Parent.Width - (DesignSystemComponent_v2.Space2 * 4)) / 5
                        Height: =Parent.Height
                        Fill: =DesignSystemComponent_v2.SecondaryColor
                        
                  - 'DesignSystem.Color.Success':
                      Control: Rectangle
                      Properties:
                        X: ='DesignSystem.Color.Secondary'.X + 'DesignSystem.Color.Secondary'.Width + DesignSystemComponent_v2.Space2
                        Y: =Parent.Y
                        Width: =(Parent.Width - (DesignSystemComponent_v2.Space2 * 4)) / 5
                        Height: =Parent.Height
                        Fill: =DesignSystemComponent_v2.SuccessColor
                        
                  - 'DesignSystem.Color.Warning':
                      Control: Rectangle
                      Properties:
                        X: ='DesignSystem.Color.Success'.X + 'DesignSystem.Color.Success'.Width + DesignSystemComponent_v2.Space2
                        Y: =Parent.Y
                        Width: =(Parent.Width - (DesignSystemComponent_v2.Space2 * 4)) / 5
                        Height: =Parent.Height
                        Fill: =DesignSystemComponent_v2.WarningColor
                        
                  - 'DesignSystem.Color.Danger':
                      Control: Rectangle
                      Properties:
                        X: ='DesignSystem.Color.Warning'.X + 'DesignSystem.Color.Warning'.Width + DesignSystemComponent_v2.Space2
                        Y: =Parent.Y
                        Width: =(Parent.Width - (DesignSystemComponent_v2.Space2 * 4)) / 5
                        Height: =Parent.Height
                        Fill: =DesignSystemComponent_v2.DangerColor
                        
            # Typography Demo
            - 'DesignSystem.Typography.Title':
                Control: Label
                Properties:
                  X: =Parent.X + DesignSystemComponent_v2.Space4
                  Y: ='DesignSystem.Colors.Row'.Y + 'DesignSystem.Colors.Row'.Height + DesignSystemComponent_v2.Space6
                  Width: =Parent.Width - (DesignSystemComponent_v2.Space4 * 2)
                  Height: =DesignSystemComponent_v2.FontSize2XL * 1.5
                  Text: ="Typography Scale"
                  Color: =DesignSystemComponent_v2.Gray900
                  Font: =Font.'Open Sans'
                  FontWeight: =FontWeight.Bold
                  Size: =DesignSystemComponent_v2.FontSize2XL
                  
            - 'DesignSystem.Typography.Demo':
                Control: GroupContainer
                Variant: ManualLayout
                Properties:
                  X: =Parent.X + DesignSystemComponent_v2.Space4
                  Y: ='DesignSystem.Typography.Title'.Y + 'DesignSystem.Typography.Title'.Height + DesignSystemComponent_v2.Space2
                  Width: =Parent.Width - (DesignSystemComponent_v2.Space4 * 2)
                  Height: =200
                Children:
                  - 'DesignSystem.Text.3XL':
                      Control: Label
                      Properties:
                        X: =Parent.X
                        Y: =Parent.Y
                        Width: =Parent.Width
                        Height: =DesignSystemComponent_v2.FontSize3XL * 1.2
                        Text: ="Heading 3XL - " & DesignSystemComponent_v2.FontSize3XL & "px"
                        Color: =DesignSystemComponent_v2.Gray900
                        Font: =Font.'Open Sans'
                        FontWeight: =FontWeight.Bold
                        Size: =DesignSystemComponent_v2.FontSize3XL
                        
                  - 'DesignSystem.Text.2XL':
                      Control: Label
                      Properties:
                        X: =Parent.X
                        Y: ='DesignSystem.Text.3XL'.Y + 'DesignSystem.Text.3XL'.Height
                        Width: =Parent.Width
                        Height: =DesignSystemComponent_v2.FontSize2XL * 1.2
                        Text: ="Heading 2XL - " & DesignSystemComponent_v2.FontSize2XL & "px"
                        Color: =DesignSystemComponent_v2.Gray900
                        Font: =Font.'Open Sans'
                        FontWeight: =FontWeight.Semibold
                        Size: =DesignSystemComponent_v2.FontSize2XL
                        
                  - 'DesignSystem.Text.XL':
                      Control: Label
                      Properties:
                        X: =Parent.X
                        Y: ='DesignSystem.Text.2XL'.Y + 'DesignSystem.Text.2XL'.Height
                        Width: =Parent.Width
                        Height: =DesignSystemComponent_v2.FontSizeXL * 1.2
                        Text: ="Heading XL - " & DesignSystemComponent_v2.FontSizeXL & "px"
                        Color: =DesignSystemComponent_v2.Gray900
                        Font: =Font.'Open Sans'
                        FontWeight: =FontWeight.Semibold
                        Size: =DesignSystemComponent_v2.FontSizeXL
                        
                  - 'DesignSystem.Text.LG':
                      Control: Label
                      Properties:
                        X: =Parent.X
                        Y: ='DesignSystem.Text.XL'.Y + 'DesignSystem.Text.XL'.Height
                        Width: =Parent.Width
                        Height: =DesignSystemComponent_v2.FontSizeLG * 1.2
                        Text: ="Text Large - " & DesignSystemComponent_v2.FontSizeLG & "px"
                        Color: =DesignSystemComponent_v2.Gray700
                        Font: =Font.'Open Sans'
                        Size: =DesignSystemComponent_v2.FontSizeLG
                        
                  - 'DesignSystem.Text.Base':
                      Control: Label
                      Properties:
                        X: =Parent.X
                        Y: ='DesignSystem.Text.LG'.Y + 'DesignSystem.Text.LG'.Height
                        Width: =Parent.Width
                        Height: =DesignSystemComponent_v2.FontSizeBase * 1.2
                        Text: ="Text Base - " & DesignSystemComponent_v2.FontSizeBase & "px"
                        Color: =DesignSystemComponent_v2.Gray700
                        Font: =Font.'Open Sans'
                        Size: =DesignSystemComponent_v2.FontSizeBase
                        
                  - 'DesignSystem.Text.SM':
                      Control: Label
                      Properties:
                        X: =Parent.X
                        Y: ='DesignSystem.Text.Base'.Y + 'DesignSystem.Text.Base'.Height
                        Width: =Parent.Width
                        Height: =DesignSystemComponent_v2.FontSizeSM * 1.2
                        Text: ="Text Small - " & DesignSystemComponent_v2.FontSizeSM & "px"
                        Color: =DesignSystemComponent_v2.Gray500
                        Font: =Font.'Open Sans'
                        Size: =DesignSystemComponent_v2.FontSizeSM
                        
                  - 'DesignSystem.Text.XS':
                      Control: Label
                      Properties:
                        X: =Parent.X
                        Y: ='DesignSystem.Text.SM'.Y + 'DesignSystem.Text.SM'.Height
                        Width: =Parent.Width
                        Height: =DesignSystemComponent_v2.FontSizeXS * 1.2
                        Text: ="Text Extra Small - " & DesignSystemComponent_v2.FontSizeXS & "px"
                        Color: =DesignSystemComponent_v2.Gray500
                        Font: =Font.'Open Sans'
                        Size: =DesignSystemComponent_v2.FontSizeXS 